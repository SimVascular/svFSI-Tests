
CUR_DIR:= $(dir $(abspath $(lastword $(MAKEFILE_LIST)) ))
SRC_DIR = $(CUR_DIR)src
OBJ_DIR = $(CUR_DIR)obj
BIN_DIR = $(CUR_DIR)bin

CC       = gcc
CPP      = g++
FC       = gfortran

FFLAGS   = -O3
FFLAGS  += -J $(OBJ_DIR)

CFLAGS   = -O3
CFLAGS  += -J $(OBJ_DIR)

CPPFLAGS = -O3
CPPFLAGS+= -J $(OBJ_DIR)

FCFLAGS  = -lstdc++
Z_LFLAGS = -lz

debug=0
ifeq ($(debug),1)
    FFLAGS   += -g -fbacktrace -fbounds-check -Wall -pedantic
    CFLAGS   += -g -Wall -pedantic -fbounds-check
    CPPFLAGS += -g -Wall -pedantic -fbounds-check
endif

